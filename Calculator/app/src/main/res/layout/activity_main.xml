<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/layoutDisplay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15sp"
        >
        <TextView
            android:id="@+id/layoutDisplayTextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutResult"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:id="@+id/layoutResultTextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="60sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="15sp"
        android:orientation="vertical"
        android:weightSum="450"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_weight="90"
            >
            <TextView
                android:id="@+id/buttonClear"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="C"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/buttonDelete"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Del"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="3dp"

                />
            <TextView
                android:id="@+id/buttonModulus"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/buttonDivision"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="90"
            android:weightSum="100"
            >
            <TextView
                android:id="@+id/buttonSeven"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/buttonEight"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="3dp"

                />
            <TextView
                android:id="@+id/buttonNine"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/buttonMultiply"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="90"
            android:weightSum="100"
            >
            <TextView
                android:id="@+id/buttonFour"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/buttonFive"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="3dp"

                />
            <TextView
                android:id="@+id/buttonSix"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/buttonPlus"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="90"
            android:weightSum="100"
            >
            <TextView
                android:id="@+id/buttonOne"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/buttonTwo"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginRight="3dp"

                />
            <TextView
                android:id="@+id/buttonThree"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/buttonMinius"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:background="@drawable/bottom_curved"
                android:layout_weight="25"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="90"
            android:weightSum="50"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                >
                <TextView
                    android:id="@+id/buttonZero"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:background="@drawable/bottom_curved"
                    android:layout_weight="25"
                    android:layout_marginRight="3dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="horizontal"
                android:weightSum="50"
                >
                <TextView
                    android:id="@+id/buttonDot"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:background="@drawable/bottom_curved"
                    android:layout_weight="25"
                    android:layout_marginLeft="3dp"
                    />
                <TextView
                    android:id="@+id/buttonEqual"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="="
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:background="@drawable/bottom_curved"
                    android:layout_weight="25"
                    android:layout_marginLeft="6dp"
                    />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

